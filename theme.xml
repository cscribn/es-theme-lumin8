<theme>
	<formatVersion>4</formatVersion>
	<include>./color.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<tile>true</tile>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./art/carbon_fiber.png</path>
		</image>

		<helpsystem name="help">
			<textColor>7d7d7d</textColor>
			<iconColor>7d7d7d</iconColor>
		</helpsystem>

		<image name="CenterFade" extra="true">
			<tile>false</tile>
			<size>1 0.5</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<path>./art/centerfade.png</path>
		</image>

		<image name="BottomBar" extra="true">
			<tile>false</tile>
			<size>1 0.065</size>
			<pos>0 1</pos>
			<origin>0 1</origin>
			<path>./art/bottom.png</path>
		</image>

		<image name="logo">
			<path>./art/systems/${system.theme}.svg</path>
		</image>

		<text name="systemText" extra="true">
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/SNES.ttf</fontPath>
			<fontSize>0.055</fontSize>
			<size>0.9 0</size>
			<pos>0.5 0.2</pos>
			<alignment>center</alignment>
			<origin>0.5 0.5</origin>
			<text>${system.fullName}</text>
		</text>

	</view>

	<view name="basic">

		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/carbon_fiber.png</path>
		</image>

		<textlist name="gamelist">
			<primaryColor>969696</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.030</fontSize>
			<pos>0.025 0.18</pos>
			<size>0.950 0.73</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<forceUppercase>1</forceUppercase>
			<scrollSound>./art/scroll.wav</scrollSound>
		</textlist>

	</view>

	<view name="detailed">

		<image name="md_image">
			<pos>0.763 0.400</pos>
			<maxSize>0.453 0.436</maxSize>
			<origin>0.5 0.5</origin>
		</image>

	</view>

	<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.763 0.400</pos>
				<maxSize>0.366 0.436</maxSize>
				<origin>0.5 0.5</origin>
				<delay>0.2</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.6 0.035</pos>
				<origin>0 0</origin>
				<maxSize>0.2 0.1</maxSize>
			</image>

		</view>

	</feature>

	<view name="detailed, video">

		<image name="background">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/carbon_fiber.png</path>
		</image>

		<text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_players, md_players">
			<pos>1 1</pos>
		</text>

		<rating name="md_rating">
			<pos>1 1</pos>
		</rating>

		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>

		<text name="md_lbl_releasedate, md_lbl_developer, md_lbl_publisher">
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<size>0 0.033</size>
		</text>

		<datetime name="md_releasedate">
			<color>969696</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<size>0 0.033</size>
		</datetime>

		<text name="md_developer, md_publisher">
			<color>969696</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<size>0 0.033</size>
		</text>

		<text name="md_lbl_releasedate">
			<pos>0.53 0.63</pos>
		</text>

		<datetime name="md_releasedate">
			<pos>0.64 0.63</pos>
		</datetime>

		<text name="md_lbl_developer">
			<pos>0.53 0.66</pos>
		</text>

		<text name="md_developer">
			<pos>0.64 0.66</pos>
		</text>

		<text name="md_lbl_publisher">
			<pos>0.53 0.69</pos>
		</text>

		<text name="md_publisher">
			<pos>0.64 0.69</pos>
		</text>

		<textlist name="gamelist">
			<primaryColor>969696</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
			<pos>0.021 0.168</pos>
			<size>0.489 0.754</size>
			<alignment>left</alignment>
			<horizontalMargin>0.00</horizontalMargin>
			<fontSize>0.03</fontSize>
			<scrollSound>./art/scroll.wav</scrollSound>
		</textlist>

	</view>

	<view name="basic, detailed, video">

		<image name="bottom" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
			<path>./art/bottom.png</path>
		</image>

		<image name="top" extra="true">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.16</size>
			<path>./art/top.png</path>
		</image>

		<image name="logo">
			<pos>0.266 0.074</pos>
			<maxSize>0.460 0.126</maxSize>
			<origin>0.5 0.5</origin>
			<path>./art/systems/${system.theme}.svg</path>
		</image>

		<text name="systemText" extra="true">
			<forceUppercase>1</forceUppercase>
			<size>0.45 0</size>
			<pos>0.527 0.01</pos>
			<alignment>right</alignment>
			<fontPath>./art/SNES.ttf</fontPath>
			<fontSize>0.045</fontSize>
			<text>${system.fullName}</text>
		</text>

	</view>

</theme>
