<theme>
    <formatVersion>4</formatVersion>
	<include>./color.xml</include>

	<view name="basic, detailed, system">

		<image name="background" extra="true">
			<tile>true</tile>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./art/box.png</path>
			<color>d1d3d4</color>
		</image>

		<image name="honeycomb" extra="true">
			<tile>true</tile>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./art/honeycomb.png</path>
			<color>c6c6c880</color>
		</image>

		<helpsystem name="help">
			<textColor>8f8c8d</textColor>
			<iconColor>8f8c8d</iconColor>
		</helpsystem>

		<image name="Top_Fade" extra="true">
			<tile>false</tile>
			<size>1 0.125</size>
			<pos>0.0 0.0</pos>
			<origin>0.0 0.0</origin>
			<path>./art/fade-vertical.png</path>
			<color>ffffff70</color>
		</image>

		<image name="Bottom_Fade" extra="true">
			<tile>false</tile>
			<size>1 -0.2</size>
			<pos>0 1</pos>
			<origin>0 0</origin>
			<path>./art/fade-vertical.png</path>
			<color>ffffff70</color>
		</image>

	</view>

	<view name="system">

		<image name="center_bar" extra="true">
			<tile>false</tile>
			<size>1 0.2702</size>
			<pos>0 0.384</pos>
			<origin>0 0</origin>
			<path>./art/center_bar.png</path>
		</image>

		<image name="color_bar_top" extra="true">
			<tile>false</tile>
			<pos>0 0.378</pos>
			<origin>0 0</origin>
			<size>1 0.005</size>
			<path>./art/box.png</path>
		</image>

		<image name="color_bar_bottom" extra="true">
			<tile>false</tile>
			<pos>0 0.615</pos>
			<origin>0 0</origin>
			<size>1 0.005</size>
			<path>./art/box.png</path>
		</image>

		<image name="logo">
			<path>./art/systems/${system.theme}.svg</path>
		</image>

		<image name="ConsoleOverlay" extra="true">
			<tile>false</tile>
			<pos>0.5 0.22</pos>
			<origin>0.5 0.5</origin>
			<size>0 0.15</size>
			<path>./art/consoles/${system.theme}.png</path>
		</image>

		<text name="systemText" extra="true">
			<color>726f70</color>
			<forceUppercase>1</forceUppercase>
			<size>1 0</size>
			<pos>0 0.01</pos>
			<alignment>center</alignment>
			<fontPath>./art/OpenSansHebrewCondensed-Regular.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<text>${system.fullName}</text>
		</text>

	</view>

	<view name="basic">

		<textlist name="gamelist">
			<primaryColor>726f70</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.030</fontSize>
			<pos>0.025 0.18</pos>
			<size>0.950 0.71</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<forceUppercase>1</forceUppercase>
			<scrollSound>./art/scroll.wav</scrollSound>
		</textlist>

	</view>

	<view name="detailed">

		<image name="gamelist_background" extra="true">
			<tile>false</tile>
			<pos>0.030 0.10</pos>
			<origin>0 0</origin>
			<size>0.442 0.83</size>
			<path>./art/box.png</path>
			<color>ffffff60</color>
		</image>

		<image name="left_colored_bar" extra="true">
			<tile>false</tile>
			<pos>0.030 0.10</pos>
			<origin>0 0</origin>
			<size>0.003 0.83</size>
			<path>./art/box.png</path>
		</image>

		<image name="right_colored_bar" extra="true">
			<tile>false</tile>
			<pos>0.472 0.10</pos>
			<origin>0 0</origin>
			<size>0.003 0.83</size>
			<path>./art/box.png</path>
		</image>

		<image name="md_image">
			<pos>0.737 0.371</pos>
			<maxSize>0.476 0.466</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_players, md_players, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher">
			<pos>1 1</pos>
		</text>

		<rating name="md_rating">
			<pos>1 1</pos>
		</rating>

		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>

		<text name="md_releasedate, md_developer, md_publisher">
			<alignment>center</alignment>
			<color>726f70</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<size>0.440 0.037</size>
		</text>

		<datetime name="md_releasedate">
			<pos>0.51 0.637</pos>
		</datetime>

		<text name="md_developer">
			<pos>0.51 0.674</pos>
		</text>

		<text name="md_publisher">
			<pos>0.51 0.711</pos>
		</text>

		<textlist name="gamelist">
			<primaryColor>726f70</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
			<pos>0.030 0.167</pos>
			<size>0.442 0.741</size>
			<alignment>left</alignment>
			<horizontalMargin>0.02</horizontalMargin>
			<fontSize>0.03</fontSize>
			<scrollSound>./art/scroll.wav</scrollSound>
		</textlist>

	</view>

	<view name="basic, detailed">

		<image name="background" extra="true">
			<tile>true</tile>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./art/box.png</path>
			<color>d1d3d4</color>
		</image>

		<image name="bottom_box" extra="true">
			<tile>false</tile>
			<pos>0 0.93</pos>
			<origin>0 0</origin>
			<size>1 0.07</size>
			<path>./art/box.png</path>
			<color>ffffff70</color>
		</image>

		<image name="bottom_colored_bar" extra="true">
			<tile>false</tile>
			<pos>0 0.93</pos>
			<origin>0 0</origin>
			<size>1 0.005</size>
			<path>./art/box.png</path>
		</image>

		<image name="top" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.20</size>
			<path>./art/GamelistTop.png</path>
			<color>ffffff</color>
		</image>

		<image name="top_honeycomb" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.1048</size>
			<path>./art/honeycomb.png</path>
			<color>ffffff60</color>
		</image>

		<image name="top_colored_bar" extra="true">
			<tile>false</tile>
			<pos>0 0.1048</pos>
			<origin>0 0</origin>
			<size>1 0.005</size>
			<path>./art/box.png</path>
		</image>

		<image name="logo">
			<pos>0.5 0.009</pos>
			<maxSize>0.35 0.09</maxSize>
			<origin>0.0 0.0</origin>
			<path>./art/systems/${system.theme}.svg</path>
		</image>

	</view>

</theme>
